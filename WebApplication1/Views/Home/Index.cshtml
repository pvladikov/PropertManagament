
@{
    ViewBag.Title = "Home";
}

@section scripts
{
    <script src="~/Scripts/home.js"></script>
}

<h2>Hello World!</h2>

<div data-ng-app='homeApplication' data-ng-controller='homeController'>
    <table>
        <thead>
            <tr>
                <td data-ng-click="sort='area'">Area</td>   
              
            </tr>
        </thead>
        <tbody>
            <tr data-ng-repeat='property in propertymanagament | orderBy:sort'>
                <td>{{ property.area }}</td>              
            </tr>
        </tbody>
    </table>

    <p>
        <input type='button' value='Property' data-ng-click='property()' />
    </p>
</div>